<?xml version="1.0" encoding="utf-8"?>
<nodeList xmlns:its="http://www.w3.org/2005/11/its"
          xmlns:datc="http://example.com/datacats">
   <nodeList datacat="translate">
      <node path="/html" outputType="default-value">
         <output its:translate="yes"/>
      </node>
      <node path="/html/head[1]" outputType="default-value">
         <output its:translate="yes"/>
      </node>
      <node path="/html/head[1]/title[1]" outputType="default-value">
         <output its:translate="yes"/>
      </node>
      <node path="/html/head[1]/link[1]" outputType="default-value">
         <output its:translate="yes"/>
      </node>
      <node path="/html/head[1]/link[1]/@href" outputType="default-value">
         <output its:translate="no"/>
      </node>
      <node path="/html/head[1]/link[1]/@rel" outputType="default-value">
         <output its:translate="no"/>
      </node>
      <node path="/html/body[1]" outputType="default-value">
         <output its:translate="yes"/>
      </node>
      <node path="/html/body[1]/p[1]" outputType="default-value">
         <output its:translate="yes"/>
      </node>
      <node path="/html/body[1]/p[1]/@id" outputType="default-value">
         <output its:translate="no"/>
      </node>
      <node path="/html/body[1]/p[1]/@title" outputType="new-value-global">
         <output translate="yes"/>
      </node>
      <node path="/html/body[1]/p[1]/code[1]" outputType="new-value-global">
         <output translate="no"/>
      </node>
   </nodeList>
</nodeList>
